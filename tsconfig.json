
{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "isolatedModules": true
  },
  "include": ["**/*.ts", "**/*.tsx", "api/**/*.ts"],
  "exclude": ["node_modules"]
}
